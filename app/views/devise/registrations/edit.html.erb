
<div class="container">
    <div class="row">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">登録情報の編集</h3>
			 	</div>
			  	<div class="panel-body">
			  	  
			  	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
			  	<%= devise_error_messages! %>
			  	    
			    	<form action="/users/sign_in" accept-charset="UTF-8" method="post" >
			    	  
			    	  
               <fieldset>
               	
        　　　 <div class="form-group">
         	　　<% if @user.image? %>
　　　　　　　　　<%= image_tag @user.image.thumb.url %>
　　　　　　　　<% else %>
　　　　　　　　　画像なし
　　　　　　　　<% end %>

			    		       <%= f.label :プロフィール画像 %><br />
			    		       　<%= f.file_field :image %> 

			    		</div>
			    	  	<div class="form-group">

    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true ,class: "form-control"%>
			    		   
			    	   </div>
			    		
			    		<div class="form-group">
    <%= f.label :お名前 %><br />
    <%= f.text_field :name , autofocus: true ,class: "form-control"%>			    		  

			    		</div>
			    		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
			    		
			    		<div class="form-group">
			    		 <%= f.label :新しいパスワード %> <i>(パスワードを変更されない場合は空白のまま)</i><br />
                <%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
                     
			    		</div>
			    		
			    		
			    		<div class="form-group">
			    		  <%= f.label :新しいパスワードの確認 %><i>(確認の為もう一度入力してください)</i><br />
                 <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control"%>
			    		</div>
			    		
			    		
			    		<div class="form-group">
			    		     <%= f.label :現在のパスワード%> <i>(新しいパスワードに変更する為に現在のパスワードを入力してください)</i><br />
                 <%= f.password_field :current_password, autocomplete: "off" ,class: "form-control"%> 
			    		</div>
			    		
			    		
			    		    <%= f.submit "更新する" , class: "btn btn-lg btn-success btn-block"%>
			    	</fieldset>

			      	<% end %>
			      	<h3>自分のアカウントを削除する</h3>

<p>Unhappy? <%= button_to "削除する", registration_path(resource_name), data: { confirm: "宜しいですか?" }, method: :delete %></p>

<%= link_to "戻る", :back %>
                   <hr>
                   <%= render "devise/shared/links" %>
			    </div>
			</div>
		</div>
	</div>
</div>
