
<div class="container">
    <div class="row">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">ログイン</h3>
			 	</div>
			  	<div class="panel-body">
			  	    
			  	    
			    	<form action="/users/sign_in" accept-charset="UTF-8" method="post" >
                    <fieldset>
			    	  	<div class="form-group">
			    	  	    <label for="user_メールアドレス">メールアドレス</label><br />
			    		    <input class="form-control" placeholder="yourmail@example.com" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email">
			    		</div>
			    		<div class="form-group">
			    		    <label for="user_パスワード">パスワード</label><br />
			    			<input autocomplete="off" type="password" name="user[password]" id="user_password" />
			    		</div>
			    		<div class="checkbox">
			    	    	<label>
			    	    	          <input name="user[remember_me]" type="hidden" value="0" /><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" />
      <label for="user_保存する">保存する</label>

			    	    </div>
			    		<input class="btn btn-lg btn-success btn-block" type="submit" name="commit" value="ログイン">
			    	</fieldset>
			      	</form>
                   <hr>
                   <%= render "devise/shared/links" %>
			    </div>
			</div>
		</div>
	</div>
</div>


